<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MultiActionTextViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/multiactiontextview_title" />

    <am.widget.multiactiontextview.MultiActionTextView
        android:id="@+id/mat_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/multiactiontextview_content"
        android:textSize="18sp" />

</LinearLayout>
